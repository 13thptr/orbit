{
  "private": true,
  "workspaces": {
    "packages": [
      "metabook-anki",
      "metabook-app",
      "metabook-client",
      "metabook-cli",
      "metabook-cloud-functions",
      "metabook-firebase-shared",
      "metabook-core",
      "metabook-sample-data",
      "metabook-ui",
      "metabook-ui-web",
      "metabook-ui-web-demo",
      "metabook-web-component",
      "firebase-node-persistence-shim",
      "firebase-react-native-persistence-shim"
    ]
  },
  "scripts": {
    "build": "tsc -b tsconfig.base.json && (cd metabook-core && yarn run build) && (cd metabook-ui-web && yarn run build)",
    "watch": "tsc -b -w tsconfig.base.json",
    "test": "npx jest --projects metabook-anki metabook-core metabook-client --runInBand",
    "test:watch": "yarn run test --watch",
    "prepare": "git submodule update --init --recursive && (cd vendor/react-native-web && yarn install)"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  }
}
