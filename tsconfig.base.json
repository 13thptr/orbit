{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": []
  },
  "compileOnSave": true,
  "references": [
    { "path": "./metabook-ui" },
    { "path": "./metabook-app" },
    { "path": "./metabook-client" },
    { "path": "./metabook-core" },
    { "path": "./metabook-core/tsconfig.cjs.json" },
    { "path": "./metabook-firebase-support" },
    { "path": "./metabook-sample-data" }
  ],
  "files": []
}
